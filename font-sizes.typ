/// The latex `\footnotesize` text size
#let footnotesize = text.with(0.8em)

/// The latex `\large` text size
#let large = text.with(1.2em)

/// The latex `\Large` text size
#let x-large = text.with(1.2 * 1.2em)

/// The latex `\LARGE` text size
#let xx-large = text.with(1.2 * 1.2 * 1.2em)

/// The latex `\huge` text size
#let huge = text.with(1.2 * 1.2 * 1.2 * 1.2em)
